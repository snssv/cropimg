@charset "UTF-8"
$tml = rgba(0,0,0,.04)
$tmh = rgba(0,0,0,.2)
$btm = rgba(180,180,180,.5)
$tmb = rgba(255,255,255,.2)
$tmr = rgba(220,30,50,.7)
$tmlv = rgba(0,160,80,.7)
$lan = #1480db
$he  = #8f4326
$hon = #ef4356
$jba = #056eba
$jbb = #4e3d9b
$jv = #f1982e
$lv = #80be1d
$lv2 = #50de3d
$qi = #31bbd7
$hui = #8e8e8e
$huis = #5a5a5a
$zi = #8495c2
$bor = rgba(0,0,0,.1)
$bar = rgba(30,120,160,.9)

$head_h = .6rem
$w=40px

header
    position fixed
    z-index 1000
    background $bar
    top 0
    left 0
    width 100%
    height $head_h
    line-height $head_h

#body
    padding-top $head_h
.cropbox
    position fixed
    display none
    z-index 999
    left 0
    right 0
    top $head_h
    bottom 0
    min-height 5rem
    font-size 20px
    background-image url("data:image/png;base64,")
    background-color #fff
    background-size 10px 10px
    .cropControls
    .close
    .addimg
        position absolute
        z-index 999
        top 5px
        height $w
    .close
        left 5px
    .addimg
        left 50px
        width $w
        input
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity .0001

    .cropControls
        right 5px
    i
        display inline-block
        cursor pointer
        text-align center
        width $w
        height $w
        color #fff
        background-color rgba(0,0,0,0.35)
        border-radius 10%
        border 1px solid #fff
        &:hover
            background-color rgba(0,0,0,0.7)
        &:before
            display inline-block
            line-height $w


    .cropControlZoomMuchIn
    .cropControlZoomMuchOut
    .cropControlRotateRight
    .cropControlReset
        display none


.crop_box
    img
        max-width 100%
        max-height 100%


@import 'com'
@import 'icon'