@font-face
    font-family 'cropimg' 
    src  url('../fonts/cropimg.ttf?df7qzm') 
    font-weight normal 
    font-style normal
$w=40px

.cropbox
    width 100%
    height 100%
    position fixed
    font-size 20px
    top 0
    left 0
    background url("data:image/png;base64,")
    background-size 10px 10px
    .cropControls
    .addimg
        position absolute
        z-index 999
        top 5px
        height $w
    .addimg
        left 5px
        width $w
        input
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity .0001
    .cropControls
        right 5px
    i
        font-family 'cropimg' !important 
        speak none 
        font-style normal 
        font-weight normal 
        font-variant normal 
        text-transform none 
        display inline-block
        cursor pointer
        text-align center
        width $w
        height $w
        color #fff
        background-color rgba(0,0,0,0.35)
        border-radius 10%
        border 1px solid #fff
        &:hover
            background-color rgba(0,0,0,0.7)
        &:before
            display inline-block
            line-height $w


    .cropControlZoomMuchIn
    .cropControlZoomMuchOut
    .cropControlRotateRight
    .cropControlReset
        display none


    .cropControlZoomIn
    .cropControlZoomMuchIn
    .icon-plus
        &:before
            content "\e900"
    .cropControlZoomOut
    .cropControlZoomMuchOut
    .icon-minus
        &:before
            content "\e901"
    .icon-picture:before
        content "\e902" 
    .icon-cancel:before
        content "\e903"
    .cropControlCrop
    .icon-crop
        &:before
            content "\e904"
    .cropControlRemoveCroppedImage
    .icon-floppy
        &:before
            content "\e905"
    .icon-download:before
        content "\e960"
    .cropControlUpload
    .icon-upload
        &:before
            content "\e961"
    .cropControlRotateLeft
    .icon-undo
        &:before
            content "\e965"
    .cropControlRotateRight
    .icon-redo
        &:before
            content "\e966"
    .icon-undo2:before
        content "\e967" 
    .icon-redo2:before
        content "\e968" 
    .icon-spinner:before
        content "\e97a" 

.crop_box
    img
        max-width 100%
        max-height 100%

@import 'com'